{
    "services": {
        "gekkon": {
            "shared": true,
            "scenario": [
                {
                    "create": "%gekkon.raw%"        
                },
                {
                    "call": "set_property",
                    "arguments": [ "tpl_module_manager", "%tplModuleManager%" ]
                },
                {
                    "call": "set_property",
                    "arguments": [ "tpl_provider", "%TplProviderReactorMod%" ]
                },
                {
                    "call": "register",
                    "arguments": [ "_application", "%application%" ]
                }
            ]
            
        },
        "gekkon.raw": {
            "shared": true,
            "scenario": [
                {
                    "create": "\\Reactor\\Gekkon\\Gekkon",
                    "arguments": [ "%base_dir%", "%tpl_bin%" ]
                }

            ]
        },
        "tplModuleManager": {
            "scenario": [
                {
                    "create": "\\Reactor\\Gekkon\\Module\\TplModuleManager",
                    "arguments": [ "%gekkon.raw%" ]
                },
                {
                    "call": "push",
                    "arguments": [ "%application%" ]
                }
            ]
        },
        "TplProviderReactorMod": {
            "scenario": [
                {
                    "create": "\\Reactor\\Gekkon\\Module\\TplProviderReactorMod",
                    "arguments": [ "%application%" ]
                }
            ]
        }
    }
}
